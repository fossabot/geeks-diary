{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": false,
        "noImplicitAny": false,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "../node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "include": [
        "src/renderer/**/*.ts"
    ],
    "exclude": [
        "**/node_modules/",
        "dist/aot/"
    ],
    "angularCompilerOptions": {
        "genDir": "dist/aot/"
    }
}
