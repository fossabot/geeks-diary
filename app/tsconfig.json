{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "noImplicitAny": false,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "../node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "exclude": [
        "**/node_modules"
    ]
}
